{
  "name": "sanabel-al-firdaws-starlight",
  "type": "module",
  "version": "0.0.1",
  "scripts": { 
    "dev": "npm run r2mdoc && astro dev ",
    "r2mdoc": "npx renamer --find /.md$/ --replace .mdoc src/content/**",
    "r2md": "npx renamer --find /.mdoc$/ --replace .md src/content/**",

    "build": "npx renamer --find /.md$/ --replace .mdoc  src/content/** && astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "generate-pwa-assets": "pwa-assets-generator --preset minimal public/favicon.svg"
  },
  "dependencies": {
    "@astrojs/check": "^0.3.4",
    "@astrojs/markdoc": "^0.8.2",
    "@astrojs/starlight": "^0.15.1",
    "@types/culori": "^2.0.0",
    "astro": "^4.0.1",
    "culori": "^3.2.0",
    "lucid-color-picker": "^0.1.0",
    "replace-ext": "^2.0.0",
    "sharp": "^0.32.5",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@vite-pwa/assets-generator": "^0.2.2",
    "@vite-pwa/astro": "^0.2.0",
    "renamer": "^4.0.0",
    "workbox-window": "^7.0.0"
  }
}
